@model E_CommerceLibrary.Models.Publisher

<!DOCTYPE html>
<html>
<head>
    <title>Create Publisher</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h2 {
            color: #333;
        }

        .form-horizontal {
            margin: 20px auto;
            max-width: 500px;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        .control-label {
            font-weight: bold;
        }

        .col-md-10 {
            padding-top: 10px;
        }

        .btn-default {
            background-color: #4CAF50;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
        }

            .btn-default:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>

    <h2>Create Publisher</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.PublisherName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PublisherName)
                    @Html.ValidationMessageFor(model => model.PublisherName)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</body>
</html>

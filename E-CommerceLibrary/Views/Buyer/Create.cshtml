@model E_CommerceLibrary.Models.Buyer
@using E_CommerceLibrary.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Buyer";
    var db = new ApplicationDbContext();
    var books = db.Books.ToList();
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h2 {
            color: #333;
        }

        label {
            font-weight: bold;
        }

        input[type="text"], select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }

        .back-link {
            margin-top: 10px;
            display: inline-block;
            text-decoration: none;
            background-color: #ccc;
            padding: 6px 10px;
            border-radius: 4px;
        }
    </style>
</head>
<body>

    <h2>Create Buyer</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <label for="BuyerName">Buyer Name:</label>
        @Html.EditorFor(m => m.BuyerName)
        @Html.ValidationMessageFor(m => m.BuyerName)
        <br />

        <label for="BookID">Book:</label>
        @Html.DropDownListFor(m => m.BookID, new SelectList(books, "BookID", "BookName"), "Select a Book")
        @Html.ValidationMessageFor(m => m.BookID)
        <br />

        <input type="submit" value="Create" />
    }

    <a href="@Url.Action("Index")" class="back-link">Back to list</a>

</body>
</html>

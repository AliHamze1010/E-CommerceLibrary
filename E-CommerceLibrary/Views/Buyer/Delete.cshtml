@model E_CommerceLibrary.Models.Buyer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Buyer";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h2 {
            color: #333;
        }

        .confirmation {
            color: red;
            font-weight: bold;
        }

        input[type="submit"], .cancel-link {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }

        .cancel-link {
            background-color: #ccc;
        }

            .cancel-link:hover {
                background-color: #aaa;
            }
    </style>
</head>
<body>

    <h2>Are you sure you want to delete <span class="confirmation">@Model.BuyerName</span>?</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.BuyerID)
        <input type="submit" value="Delete" />
    }

    <a href="@Url.Action("Index")" class="cancel-link">Cancel</a>

</body>
</html>

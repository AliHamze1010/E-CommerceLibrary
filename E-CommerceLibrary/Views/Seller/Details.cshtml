@model E_CommerceLibrary.Models.Seller

<!DOCTYPE html>
<html>
<head>
    <title>Seller Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h2 {
            color: #333;
        }

        .dl-horizontal {
            width: 50%;
            margin: 0 auto;
            border: 1px solid #ccc;
            padding: 15px;
            background-color: white;
            border-radius: 5px;
        }

            .dl-horizontal dt {
                width: 40%;
                float: left;
                clear: left;
                text-align: right;
                padding: 5px;
                font-weight: bold;
            }

            .dl-horizontal dd {
                width: 60%;
                float: left;
                padding: 5px;
                margin-left: 40%;
            }
    </style>
</head>
<body>

    <h2>Details for @Model.SellerName</h2>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.SellerName)</dt>
        <dd>@Html.DisplayFor(model => model.SellerName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Book.BookName) @* Assuming Book has a BookName property *@</dt>
        <dd>@Html.DisplayFor(model => model.Book.BookName)</dd>
    </dl>

</body>
</html>

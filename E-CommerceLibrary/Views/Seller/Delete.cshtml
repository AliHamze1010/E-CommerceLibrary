@model E_CommerceLibrary.Models.Seller

<!DOCTYPE html>
<html>
<head>
    <title>Delete Seller</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h2 {
            color: #333;
        }

        .form-actions {
            margin-top: 20px;
            text-align: center;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
            padding: 5px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: #c9302c;
            }

        .btn-link {
            color: #333;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <h2>Delete Seller</h2>
    <p>
        Are you sure you want to delete this seller: @Model.SellerName?
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
        </div>
    }

</body>
</html>
